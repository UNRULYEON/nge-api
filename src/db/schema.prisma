generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Person {
  id       String  @id
  name     String
  imageUrl String?

  directed Director[]
  written  Writer[]

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
}

model Movie {
  id String @id

  titleEnglish         String
  titleJapanese        String
  titleJapaneseLiteral String?
  titleRomaji          String

  imageUrl         String?
  runTimeInMinutes Int

  directors      Director[]
  MediaCharacter MediaCharacter[]

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
}

model Episode {
  id            String @id
  number        String
  titleEnglish  String
  titleJapanese String
  titleRomaji   String

  directors      Director[]
  writers        Writer[]
  MediaCharacter MediaCharacter[]

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
}

model Director {
  id   String @id
  type Media

  person   Person @relation(fields: [personId], references: [id])
  personId String

  episode   Episode? @relation(fields: [episodeId], references: [id])
  episodeId String?

  movie   Movie?  @relation(fields: [movieId], references: [id])
  movieId String?

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  @@index([personId, episodeId])
}

model Writer {
  id   String @id
  type Media

  person   Person @relation(fields: [personId], references: [id])
  personId String

  episode   Episode @relation(fields: [episodeId], references: [id])
  episodeId String

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  @@index([personId, episodeId])
}

model Character {
  id   String @id
  name String

  MediaCharacter MediaCharacter[]

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
}

model MediaCharacter {
  id String @id

  media         Media
  characterName String
  imageUrl      String?

  character   Character @relation(fields: [characterId], references: [id])
  characterId String

  movie   Movie?  @relation(fields: [movieId], references: [id])
  movieId String?

  episode   Episode? @relation(fields: [episodeId], references: [id])
  episodeId String?

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
}

enum Media {
  MOVIE
  EPISODE
}
