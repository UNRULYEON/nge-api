generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Person {
  id       String  @id
  name     String
  imageUrl String?

  directed Director[]
  written  Writer[]

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
}

model Episode {
  id            String @id
  number        String
  titleEnglish  String
  titleJapanese String
  titleRomaji   String

  directors Director[]
  writers   Writer[]

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
}

model Director {
  id   String @id
  type Media

  person   Person @relation(fields: [personId], references: [id])
  personId String

  episode   Episode? @relation(fields: [episodeId], references: [id])
  episodeId String?

  movie   Movie?  @relation(fields: [movieId], references: [id])
  movieId String?

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  @@index([personId, episodeId])
}

model Writer {
  id   String @id
  type Media

  person   Person @relation(fields: [personId], references: [id])
  personId String

  episode   Episode @relation(fields: [episodeId], references: [id])
  episodeId String

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  @@index([personId, episodeId])
}

enum Media {
  MOVIE
  EPISODE
}

model Character {
  id       String  @id
  name     String
  imageUrl String?

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
}

model Movie {
  id String @id

  titleEnglish         String
  titleJapanese        String
  titleJapaneseLiteral String?
  titleRomaji          String

  imageUrl         String?
  runTimeInMinutes Int

  directors Director[]

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
}
