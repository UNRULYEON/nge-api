{
  "$schema": "https://schema.railpack.com",
  "steps": {
    "bundle": {
      "inputs": [{ "step": "build" }],
      "commands": ["bun build src/index.ts --outdir=dist --target=bun"]
    }
  },
  "deploy": {
    "inputs": [
      {
        "step": "packages:mise",
        "include": [
          "/mise/shims",
          "/mise/installs",
          "/usr/local/bin/mise",
          "/etc/mise/config.toml",
          "/root/.local/state/mise"
        ]
      },
      { "step": "bundle" }
    ],
    "startCommand": "bun run dist/index.js"
  }
}
